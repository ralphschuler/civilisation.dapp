{
    "name": "debian-bun-foundry",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "NODE_VERSION": "22",
            "BUN_VERSION": "1.1.34",
            "FOUNDRY_VERSION": "stable",
            "USERNAME": "node"
        }
    },
    "remoteUser": "node",
    "features": {},
    "postCreateCommand": "bash /usr/local/bin/devcontainer-postcreate.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.remote-containers",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "JuanBlanco.solidity"
            ]
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.foundry,target=/home/vscode/.foundry,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined"
    ]
}
